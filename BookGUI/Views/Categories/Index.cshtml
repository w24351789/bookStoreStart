@model IEnumerable<BookGUI.Services.ModelDTOs.CategoryDto>
@{
    ViewData["Title"] = "Index";
}

<h2>@ViewBag.Message</h2>


<div>
    <h2>List Of Categoies</h2>
    <br />
    @foreach(var item in Model)
    {
        <p>
            <strong>Category Name : </strong>@item.Name
            <a asp-controller="Categories" asp-action="GetCategoryById" asp-route-categoryId="@item.Id">| Details</a>
            <a asp-controller="Categories" asp-action="DeleteCategory" asp-route-categoryId="@item.Id">| Delete</a>
        </p>
    }
</div>

